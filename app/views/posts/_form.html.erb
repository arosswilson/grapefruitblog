<%= form_for @post, class: 'form-horizontal' do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %><br />
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: 'form-control' %><br />
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %><br />
  </div>
  <div class="form-actions">
    <%= f.submit "Create Post", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
