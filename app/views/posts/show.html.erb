<h1> <%= @post.author %></h1>
<p> <%= @post.title %></p>
<p> <%= @post.content %></p>
<%= link_to 'Post Index', posts_path, class: 'btn btn-success', style: 'color: white;' %>
<%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-danger', style: 'color: white;' %>
<%= link_to 'Delete Post', post_path(@post), method: :delete, class: 'btn btn-warning', style: 'color: white;' %>

<br/>
<br/>
<%= link_to 'Add Comment', new_post_comment_path([@post, @comment]), class: 'btn btn-primary', style: 'color: white;' %><br/>

Comments:
<br/>
<table>
  <% @comments.each do |comment| %>
      <%= render 'comment', :comment => comment  %>
      <br/>
  <% end %>


</table>
